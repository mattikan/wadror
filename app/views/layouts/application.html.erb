<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navibar">
  <%= link_to 'breweries', breweries_path %>
  <%= link_to 'beers', beers_path %>
  <%= link_to 'ratings', ratings_path %>
  <%= link_to 'users', users_path %>
  |
  <% if current_user %>
    <%= link_to current_user.username, current_user %>
    <%= link_to 'rate a beer', new_rating_url %>
    <%= link_to 'signout', "/signout", method: :delete, data: { confirm: 'Are you sure?' } %>
  <% else %>
    <%= link_to 'signin', new_session_url %>
    <%= link_to 'signup', new_user_url %>
  <% end %>
</div>

<%= yield %>

<% if current_user %>
    <p><%= current_user.username %> signed in</p>
<% end %>

</body>
</html>
